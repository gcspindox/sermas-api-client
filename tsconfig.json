{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "importHelpers": false,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/*.ts",
  ],
  "compileOnSave": false
}